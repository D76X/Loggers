<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogXtreme.WinDsk.Behaviors"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:infbehaviours="clr-namespace:LogXtreme.WinDsk.Infrastructure.Behaviours;assembly=LogXtreme.WinDsk.Infrastructure"
        x:Class="LogXtreme.WinDsk.Behaviors.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="1"
                     infbehaviours:HanldeViewLoadedEventBehavior.LoadedMethodName="OnViewLoadedHandler">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ContentControl Content="ContentControl">
                        <i:Interaction.Behaviors>
                            <infbehaviours:ShowNotificationMessageBehavior Message="{Binding NotificationMessage}" />
                        </i:Interaction.Behaviors>
                    </ContentControl>
                </Grid>
            </TabItem>
            <TabItem Header="2">
                <Grid>
                    <ContentControl Content="ContentControl"
                                    Grid.Row="1" />
                </Grid>
            </TabItem>
            <TabItem Header="3" />
        </TabControl>
    </Grid>
</Window>
