<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEmf.Plugin.Product.WpfControlLibrary"
             xmlns:ViewModels="clr-namespace:WpfEmf.ViewModels;assembly=WpfEmf.ViewModels" x:Class="WpfEmf.Plugin.Product.WpfControlLibrary.ProductUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance {x:Type ViewModels:ProductViewModel}, IsDesignTimeCreatable=True}">
    <Grid>
        <TextBox x:Name="textBox" Height="23" Margin="126,101,54,0" TextWrapping="Wrap" Text="{Binding HeaderText}" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
